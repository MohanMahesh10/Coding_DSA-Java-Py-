import java.util.*;

class Solution {
    public int intersectionSizeTwo(int[][] intervals) {
        Arrays.sort(intervals, (a, b) -> a[1] == b[1] ? b[0] - a[0] : a[1] - b[1]);
        List<Integer> res = new ArrayList<>();
        int a = -1, b = -1;
        for (int[] in : intervals) {
            int start = in[0], end = in[1];
            boolean containA = (a >= start);
            boolean containB = (b >= start);
            if (containA && containB) continue;
            if (containB) {
                res.add(end);
                a = b;
                b = end;
            } else {
                res.add(end - 1);
                res.add(end);
                a = end - 1;
                b = end;
            }
        }
        return res.size();
    }
}
