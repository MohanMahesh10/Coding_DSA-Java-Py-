class Solution {
    public int findRadius(int[] houses, int[] heaters) {
      
        java.util.Arrays.sort(houses);           
        java.util.Arrays.sort(heaters);           

        int i = 0;                               
        int ans = 0;                            

        
        for (int h : houses) {                    
            
            while (i + 1 < heaters.length &&
                   Math.abs(heaters[i + 1] - h) <= Math.abs(heaters[i] - h)) {
                i++;                             
            }
            int dist = Math.abs(heaters[i] - h);  
            if (dist > ans) ans = dist;           
        }
        return ans;                               
    }
}
