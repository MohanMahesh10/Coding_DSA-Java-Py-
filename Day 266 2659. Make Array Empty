import java.util.*;

class Solution {
    public long countOperationsToEmptyArray(int[] nums) {
        int n = nums.length;
        int[][] arr = new int[n][2];

        for (int i = 0; i < n; i++) {
            arr[i][0] = nums[i];
            arr[i][1] = i;
        }

        Arrays.sort(arr, (a, b) -> Integer.compare(a[0], b[0]));

        long operations = n;
        int prevIndex = arr[0][1];

        for (int i = 1; i < n; i++) {
            int currIndex = arr[i][1];
            if (currIndex < prevIndex) {
                operations += n - i;
            }
            prevIndex = currIndex;
        }

        return operations;
    }
}
