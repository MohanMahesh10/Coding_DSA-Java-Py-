import java.util.*;

class Solution {
    public int leastInterval(char[] tasks, int n) {
        int[] count = new int[26];
        

        for (char task : tasks) {
            count[task - 'A']++;
        }
        

        int maxFreq = 0;
        for (int c : count) {
            maxFreq = Math.max(maxFreq, c);
        }
        

        int maxCount = 0;
        for (int c : count) {
            if (c == maxFreq) {
                maxCount++;
            }
        }
        

        int partCount = maxFreq - 1;
        int partLength = n + 1;
        int emptySlots = partCount * partLength + maxCount;
        

        return Math.max(tasks.length, emptySlots);
    }
}
