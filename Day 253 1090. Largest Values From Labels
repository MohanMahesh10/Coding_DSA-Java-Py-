class Solution {
    public int largestValsFromLabels(int[] values, int[] labels, int numWanted, int useLimit) {
        int[][] pairs = new int [values.length][2];
        for (int i = 0; i < values.length; i++) {
            pairs[i][0] = values[i];
            pairs[i][1] = labels[i];

        }

        Arrays.sort(pairs, (a,b) -> b[0] - a[0]);
        Map<Integer, Integer> labelCount = new HashMap<>();

        int sum = 0;
        int count =0;

        for (int[] pair : pairs) {
            int value = pair[0];
            int label = pair[1];

            int currentCount = labelCount.getOrDefault(label, 0);
            if (currentCount < useLimit) {
                sum += value;
                labelCount.put(label, currentCount + 1);
                count++;

                if (count == numWanted) {
                    break;
                }
            }
        }
        return sum;
        
        
    }
}
