class Solution {
    public int[] constructArray(int n, int k) {
        int[] res = new int[n];
        int left = 1, right = n, idx = 0;
        while (k > 0) {
            res[idx++] = (k % 2 == 1) ? left++ : right--;
            k--;

        }
        if (idx < n) {
            int base = (k % 2 == 0) ? left : right;
            for (int i = idx; i < n; ++i) {
                res[i] = left++;

            }
        }
        return res;
        
    }
}
