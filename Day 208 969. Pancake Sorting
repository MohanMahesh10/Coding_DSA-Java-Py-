class Solution {
    public List<Integer> pancakeSort(int[] arr) {
        List<Integer> res = new ArrayList<>();
        for (int n = arr.length; n > 1; n--) {
            int idx = 0;
            for (int i = 0; i < n; i++) {
                if (arr[i] > arr[idx]) idx = i;

            }
            if (idx == n - 1) continue;
            if (idx != 0) {
                flip(arr, idx + 1);
                res.add(idx + 1);

            }
            flip(arr, n);
            res.add(n);
        }
        return res;
    }
    private void flip(int[] arr, int k) {
        int i = 0, j = k - 1;
        while (i < j) {
            int tmp = arr[i];
            arr[i++] = arr[j];
            arr[j--] = tmp;
        }
    }
}
